<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.example.expense_tracker.controller.TransactionFormController"
          hgap="10" vgap="10"
          alignment="CENTER">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0"/>

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200.0"/>

    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200.0"/>

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200.0"/>

    <Label fx:id="errorLabel" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5"
           style="-fx-text-fill: red; -fx-font-size: 12px;"/>

    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" prefWidth="100.0"/>
    </HBox>
</GridPane>

